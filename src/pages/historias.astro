---
// src/pages/historias.astro

import BaseLayout from '@/layouts/BaseLayout.astro';

// 1. Importa la función para obtener "collections"
import { getCollection } from 'astro:content';

// 2. Importa tu componente de tarjeta
import StoryCard from '@/components/StoryCard.astro';

// 3. Obtén todas las "historias" de la carpeta 'src/content/historias'
const allHistorias = await getCollection('historias');
---
<BaseLayout title="Historias">
  <div class="container mx-auto p-4">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Nuestras Historias</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {allHistorias.map(historia => (
        <StoryCard historia={historia} />
      ))}
    </div>
  </div>
</BaseLayout>